@model InsuranceTrancking.Models.vehicles

@{
    ViewBag.Title = "Delete Customer";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this customer?</h3>
<div>
    <h4>Customer Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Customer:</dt>
        <dd>@Model.CustomerID</dd>

        <dt>Vehicle ID:</dt>
        <dd>@Model.VehicleID</dd>

        <dt>Plate:</dt>
        <dd>@Model.Plate</dd>

        <dt>Brand</dt>
        <dd>@Model.Brand</dd>

        <dt>Model:</dt>
        <dd>@Model.Model</dd>

        <dt>Claim date:</dt>
        <dd>@Model.CustomerClaimDate</dd>


    </dl>

    <form method="post" action="@Url.Action("Delete", "vehicles", new { id = Model.VehicleID })">
        @Html.AntiForgeryToken() <!-- Add AntiForgeryToken for protection -->

        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button> |
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
