@model IEnumerable<InsuranceTrancking.Models.customers>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h2 class="mb-4">Customers List</h2>

        <p>
            @Html.ActionLink("Create New", "Create", "customers", null, new { @class = "btn btn-primary" })
        </p>

        <table class="table table-bordered table-hover table-striped">
            <thead class="table-primary">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Address</th>
                    
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        
                        <td>
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Edit", "customers", new { id = item.CustomerID })" class="btn btn-sm btn-success">Edit</a>
                                <a href="@Url.Action("Details", "customers", new { id = item.CustomerID })" class="btn btn-sm btn-info">Details</a>
                                <a href="@Url.Action("Delete", "customers", new { id = item.CustomerID })" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
