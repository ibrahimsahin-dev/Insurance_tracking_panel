<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Customer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h2>Create Customer</h2>
        <form action="/customers/CreateWithVehicle" method="post" class="needs-validation" novalidate>
            <!-- Customer Information -->
            <div class="mb-3">
                <label for="FirstName" class="form-label">First Name</label>
                <input type="text" id="FirstName" name="FirstName" class="form-control" required />
                <div class="invalid-feedback">Please provide a valid first name.</div>
            </div>
            <div class="mb-3">
                <label for="LastName" class="form-label">Last Name</label>
                <input type="text" id="LastName" name="LastName" class="form-control" required />
                <div class="invalid-feedback">Please provide a valid last name.</div>
            </div>
            <div class="mb-3">
                <label for="PhoneNumber" class="form-label">Phone Number</label>
                <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" required />
                <div class="invalid-feedback">Please provide a valid phone number.</div>
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" id="Email" name="Email" class="form-control" required />
                <div class="invalid-feedback">Please provide a valid email.</div>
            </div>
            <div class="mb-3">
                <label for="Address" class="form-label">Address</label>
                <textarea id="Address" name="Address" class="form-control" rows="3" required></textarea>
                <div class="invalid-feedback">Please provide an address.</div>
            </div>

            <!-- Vehicle Information -->
            <h3>Vehicle Information</h3>

            <div class="mb-3">
                <label for="Plate" class="form-label">Plate</label>
                <input type="text" id="Plate" name="vehicles.Plate" class="form-control" required />
                <div class="invalid-feedback">Please provide a vehicle plate.</div>
            </div>
            <div class="mb-3">
                <label for="Brand" class="form-label">Brand</label>
                <input type="text" id="Brand" name="vehicles.Brand" class="form-control" required />
                <div class="invalid-feedback">Please provide a vehicle brand.</div>
            </div>
            <div class="mb-3">
                <label for="Model" class="form-label">Model</label>
                <input type="text" id="Model" name="vehicles.Model" class="form-control" required />
                <div class="invalid-feedback">Please provide a vehicle model.</div>
            </div>
            <div class="mb-3">
                <label for="Year" class="form-label">Year</label>
                <input type="number" id="Year" name="vehicles.Year" class="form-control" required />
                <div class="invalid-feedback">Please provide a vehicle year.</div>
            </div>
            <div class="mb-3">
                <label for="CustomerClaimDate" class="form-label">Customer Claim Date</label>
                <input type="date" id="CustomerClaimDate" name="vehicles.CustomerClaimDate" class="form-control" required />
                <div class="invalid-feedback">Please provide a claim date.</div>
            </div>
            <!--adlfasdfjalsdfj-->
            <h2>Policy Informations</h2>
            <div class="mb-3">
                <label for="PolicyNumber" class="form-label">Policy Number</label>
                <input type="text" id="PolicyNumber" name="insurance_policies.PolicyNumber" class="form-control" required />
                <div class="invalid-feedback">Please provide a Policy Number.</div>
            </div>
            <div class="mb-3">
                <label for="CoverageType" class="form-label">Coverage Type</label>
                <input type="text" id="CoverageType" name="insurance_policies.CoverageType" class="form-control" required />
                <div class="invalid-feedback">Please provide a Coverage Type.</div>
            </div>

            <div class="mb-3">
                <label for="InsuranceCompanyID" class="form-label">Insurance CompanyID ID</label>
                <select id="InsuranceCompanyID" name="InsuranceCompanyID" class="form-select" required>
                    @foreach (var insurance_company in (ViewBag.InsuranceCompanyID as List<InsuranceTrancking.Models.insurance_companies> ?? new List<InsuranceTrancking.Models.insurance_companies>()))
                    {
                        <option value="@insurance_company.CompanyID" data-customer="@insurance_company.CompanyID">
                            @insurance_company.CompanyName
                        </option>
                    }
                </select>
                <div class="invalid-feedback">Please select a valid Vehicle ID.</div>
            </div>

            @*<div class="mb-3">
                <label for="InsuranceCompanyID" class="form-label">Insurance Company ID</label>
                <input type="number" id="Insurance Company ID" name="insurance_policies.InsuranceCompanyID" class="form-control" required />
                <div class="invalid-feedback">Please provide a Insurance Company ID.</div>
            </div>*@
            <div class="mb-3">
                <label for="StartDate" class="form-label">Policy Start Date</label>
                <input type="date" id="StartDate" name="insurance_policies.StartDate" class="form-control" required />
                <div class="invalid-feedback">Please provide a Policy Start date.</div>
            </div>
            <div class="mb-3">
                <label for="EndDate" class="form-label">Policy End Date</label>
                <input type="date" id="EndDate" name="insurance_policies.EndDate" class="form-control" required />
                <div class="invalid-feedback">Please provide a Policy End date.</div>
            </div>


            <button type="submit" class="btn btn-primary">Create</button>
            <a href="/customers/Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
    <script>
        // Example Bootstrap form validation
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>