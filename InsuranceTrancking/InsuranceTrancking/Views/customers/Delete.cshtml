@model InsuranceTrancking.Models.customers

@{
    ViewBag.Title = "Delete Customer";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this customer?</h3>
<div>
    <h4>Customer Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>First Name:</dt>
        <dd>@Model.FirstName</dd>

        <dt>Last Name:</dt>
        <dd>@Model.LastName</dd>

        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>Address:</dt>
        <dd>@Model.Address</dd>
    </dl>

    <form method="post" action="@Url.Action("Delete", "customers", new { id = Model.CustomerID })">
        @Html.AntiForgeryToken() <!-- Add AntiForgeryToken for protection -->

        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button> |
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
