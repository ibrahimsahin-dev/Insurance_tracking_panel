

@{
    ViewBag.Title = "Delete Insurance Policy";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this insurance policy?</h3>
<div>
    <h4>Insurance Policy Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Policy Number:</dt>
        <dd>@Model.PolicyNumber</dd>

        <dt>Start Date:</dt>
        <dd>@Model.StartDate</dd>

        <dt>End Date:</dt>
        <dd>@Model.EndDate</dd>

        <dt>Coverage Type:</dt>
        <dd>@Model.CoverageType</dd>

        <dt>Vehicle ID:</dt>
        <dd>@Model.VehicleID</dd>

        <dt>Customer ID:</dt>
        <dd>@Model.CustomerID</dd>

        <dt>Insurance Company ID:</dt>
        <dd>@Model.InsuranceCompanyID</dd>
    </dl>

    <form method="post" action="@Url.Action("Delete", "insurance_policies", new { id = Model.PolicyID })">


        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button> |
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>