

@{
    ViewBag.Title = "Delete Accident Report";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this accident report?</h3>
<div>
    <h4>Accident Report Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Policy Number:</dt>
        <dd>@Model.insurance_policies.PolicyNumber</dd>

        <dt>Shop Name:</dt>
        <dd>@Model.repair_shops.ShopName</dd>

        <dt>Vehicle Brand:</dt>
        <dd>@Model.vehicles.Brand</dd>

        <dt>Location:</dt>
        <dd>@Model.Location</dd>
    </dl>

    <form method="post" action="@Url.Action("Delete", "Accident_Reports", new { id = Model.ReportID })">
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button> |
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
