<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accident Reports List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h2 class="mb-4">Accident Reports List</h2>

        <p>
            <a href="@Url.Action("Create", "accident_reports")" class="btn btn-primary">Create New</a>
        </p>

        <table class="table table-bordered table-hover table-striped">
            <thead class="table-primary">
                <tr>
                    <th>Policy Number</th>
                    <th>Shop Name</th>
                    <th>Brand</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.insurance_policies.PolicyNumber</td>
                        <td>@item.repair_shops.ShopName</td>
                        <td>@item.vehicles.Brand</td>
                        <td>@item.Location</td>
                        <td>
                            <a href="@Url.Action("Edit", "accident_reports", new { id = item.ReportID })" class="btn btn-sm btn-success">Edit</a>
                            <a href="@Url.Action("Details", "accident_reports", new { id = item.ReportID })" class="btn btn-sm btn-info">Details</a>
                            <a href="@Url.Action("Delete", "accident_reports", new { id = item.ReportID })" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
       
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>